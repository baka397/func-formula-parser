{
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "declaration": true,
        "allowJs": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        }
    },
    "include": ["*.ts", "**/*.ts"],
    "exclude": [
        "node_modules"
    ]
}